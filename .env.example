#############################################
# EXECUÇÃO / LOG
#############################################
PORT=5000
FLASK_DEBUG=1                 # 1 em dev, 0 em prod
LOG_LEVEL=DEBUG               # DEBUG em dev, INFO em prod

#############################################
# CORS
#############################################
# Separe por vírgula. Em prod, use apenas o domínio do front.
CORS_ORIGINS=http://localhost:5173,https://algo-front-kohl.vercel.app

#############################################
# BANCO (DESENVOLVIMENTO LOCAL)
#############################################
# Se usar MySQL local, você pode definir explicitamente a URL:
# DATABASE_URL=mysql+mysqlconnector://root@localhost/ancora_teste
# Criação automática do schema em dev (0 para desativar)
CREATE_SCHEMA=1
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

#############################################
# BANCO (PRODUÇÃO - RAILWAY)
#############################################
# NO RAILWAY, NÃO DEFINA DATABASE_URL.
# Essas variáveis são injetadas automaticamente se você anexar um MySQL no Railway:
# MYSQLHOST=xxxxx
# MYSQLUSER=xxxxx
# MYSQLPASSWORD=xxxxx
# MYSQLDATABASE=xxxxx
# MYSQLPORT=3306

#############################################
# INTEGRAÇÃO CATÁLOGO (STG/PROD)
#############################################
API_BASE_URL=https://api-stg-catalogo.redeancora.com.br/superbusca/api/integracao
AUTH_TOKEN_URL=https://sso-catalogo.redeancora.com.br/connect/token
AUTH_CLIENT_ID=
AUTH_CLIENT_SECRET=
REQUEST_TIMEOUT_SECONDS=10

# TTL do cache de catálogos estáticos (montadoras/famílias), em segundos (12h padrão)
CATALOGO_CACHE_TTL_SECONDS=43200
